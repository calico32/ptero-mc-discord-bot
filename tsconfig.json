{
  "include": ["src"],
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "outDir": "dist",
    "jsx": "preserve",
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
